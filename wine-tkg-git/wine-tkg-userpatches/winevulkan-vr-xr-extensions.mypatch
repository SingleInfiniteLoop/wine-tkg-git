+    static const char *wine_vr_extension_name = "VK_WINE_openvr_device_extensions";
     struct vulkan_instance *instance = physical_device->instance;
     const char **extensions;
+    int ext_index;
     uint32_t count = 0;
 
     /* Should be filtered out by loader as ICDs don't support layers. */
@@ -717,6 +808,20 @@ static VkResult wine_vk_device_convert_create_info(VkPhysicalDevice client_physi
     ALL_VK_DEVICE_EXTS
 #undef USE_VK_EXT
 
+    ext_index = extension_index( info->ppEnabledExtensionNames, info->enabledExtensionCount,
+                                 wine_xr_extension_name );
+    if (ext_index >= 0)
