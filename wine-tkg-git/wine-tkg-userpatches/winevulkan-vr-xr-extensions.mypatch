+static int extension_index( const char *const *extensions, unsigned int count, const char *ext )
+{
+    while (count--)
+    {
+        if (!strcmp( extensions[count], ext ))
+            return count;
+    }
+    return -1;
+}
+
+static char *cc_strdup( struct mempool *pool, const char *s )
+{
+    int len = strlen( s ) + 1;
+    char *ret;
+
+    ret = mem_alloc( pool, len );
+    if (ret) memcpy( ret, s, len );
+    return ret;
+}
+
+static void parse_vr_extensions( struct mempool *pool, const char **extensions, unsigned int *count,
+                                 const char *ext_str )
+{
+    char *iter, *start, *extension;
+
+    if (!ext_str) return;
+    iter = cc_strdup( pool, ext_str );
+    if (!iter) return;
+
+    TRACE( "got var: %s\n", iter );
+    start = iter;
+    do
+    {
+        if (*iter == ' ')
+        {
+            *iter = 0;
+            if (extension_index( extensions, *count, start ) < 0)
+            {
+                extension = cc_strdup( pool, start );
+                if (extension)
+                {
+                    extensions[(*count)++] = extension;
+                    TRACE( "added %s to list\n", extensions[(*count) - 1] );
+                }
+                else
+                    ERR( "Failed to allocate memory for %s name in list", start );
+            }
+            iter++;
+            start = iter;
+        }
+        else if (*iter == 0)
+        {
+            if (extension_index( extensions, *count, start ) < 0)
+            {
+                extension = cc_strdup( pool, start );
+                if (extension)
+                {
+                    extensions[(*count)++] = extension;
+                    TRACE( "added %s to list\n", extensions[(*count) - 1] );
+                }
+                else
+                    ERR( "Failed to allocate memory for %s name in list", start );
+            }
+            break;
+        }
+        else
+        {
+            iter++;
+        }
+    } while (1);
+}
+
+static void parse_openxr_extensions( struct mempool *pool, const char **extensions, unsigned int *count )
+{
+    parse_vr_extensions( pool, extensions, count, getenv( "__WINE_OPENXR_VK_DEVICE_EXTENSIONS" ) );
+}
+
+static void parse_openvr_extensions( struct mempool *pool, const char **extensions, unsigned int *count,
+                                     struct vulkan_physical_device *physical_device )
+{
+    VkPhysicalDeviceProperties prop;
+    char name[64];
+
+    physical_device->instance->p_vkGetPhysicalDeviceProperties( physical_device->host.physical_device, &prop );
+    snprintf( name, 64, "VK_WINE_OPENVR_DEVICE_EXTS_PCIID_%04x_%04x", prop.vendorID, prop.deviceID );
+    parse_vr_extensions( pool, extensions, count, getenv( name ) );
+}
